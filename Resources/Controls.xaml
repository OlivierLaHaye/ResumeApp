<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attachedProperties="clr-namespace:ResumeApp.AttachedProperties"
    xmlns:controls="clr-namespace:ResumeApp.Controls"
    xmlns:services="clr-namespace:ResumeApp.Services"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <Style TargetType="{x:Type controls:TimelineControl}">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource CommonWhiteBrush}" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Height" Value="200" />
        <Setter Property="Focusable" Value="True" />
        <Setter Property="FocusVisualStyle">
            <Setter.Value>
                <Style>
                    <Setter Property="Control.Template">
                        <Setter.Value>
                            <ControlTemplate>
                                <Border
                                    Background="{x:Null}"
                                    BorderBrush="{DynamicResource CommonBrush}"
                                    BorderThickness="2"
                                    CornerRadius="12" />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SectionCardBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource CommonDarkerGrayBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource CommonCornerRadius}" />
        <Setter Property="Margin" Value="{StaticResource CommonTopBottomThickness}" />
    </Style>

    <Style x:Key="SubSectionCardBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource CommonDarkGrayBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource CommonCornerRadius}" />
        <Setter Property="Margin" Value="{StaticResource CommonTopBottomThickness}" />
    </Style>

    <Style TargetType="{x:Type Hyperlink}">
        <Setter Property="Foreground" Value="{DynamicResource WindowForegroundBrush}" />
    </Style>

    <Style x:Key="ModuleCardBorderStyle" TargetType="Border">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="CornerRadius" Value="{StaticResource LargeCornerRadius}" />
        <Setter Property="Padding" Value="{StaticResource LargeTopBottomThickness}" />
        <Setter Property="Margin" Value="{StaticResource CommonTopBottomThickness}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="16"
                    Direction="315"
                    Opacity="0.12"
                    ShadowDepth="4"
                    Color="{DynamicResource CommonBlackColor}" />
            </Setter.Value>
        </Setter>
        <Setter Property="Background">
            <Setter.Value>
                <DrawingBrush Opacity="0.10">
                    <DrawingBrush.Drawing>
                        <DrawingGroup>
                            <GeometryDrawing>
                                <GeometryDrawing.Geometry>
                                    <RectangleGeometry Rect="0,0,1,1" />
                                </GeometryDrawing.Geometry>
                                <GeometryDrawing.Brush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Offset="0" Color="{DynamicResource CommonDarkerGrayColor}" />
                                        <GradientStop Offset="1" Color="{DynamicResource CommonDarkerGrayColor}" />
                                    </LinearGradientBrush>
                                </GeometryDrawing.Brush>
                            </GeometryDrawing>
                            <GeometryDrawing>
                                <GeometryDrawing.Geometry>
                                    <RectangleGeometry Rect="0,0,1,1" />
                                </GeometryDrawing.Geometry>
                                <GeometryDrawing.Brush>
                                    <LinearGradientBrush Opacity="0.03" StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Offset="0" Color="{DynamicResource CommonWhiteColor}" />
                                        <GradientStop Offset="1" Color="{DynamicResource CommonBlackColor}" />
                                    </LinearGradientBrush>
                                </GeometryDrawing.Brush>
                            </GeometryDrawing>
                        </DrawingGroup>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="{StaticResource CommonDisableOpacity}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="SectionCardStyle" TargetType="Border">
        <Setter Property="Padding" Value="6" />
        <Setter Property="Margin" Value="6" />
        <Setter Property="CornerRadius" Value="{StaticResource CommonCornerRadius}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource OnSurfaceCardStrokeOnDarkBrush}" />
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Opacity="{StaticResource LowOpacity}" Color="{DynamicResource CommonDarkerGrayColor}" />
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect
                            BlurRadius="10"
                            Opacity="0.05"
                            ShadowDepth="0"
                            Color="{DynamicResource CommonColor}" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style
        x:Key="ModuleCardBorderWithMarginStyle"
        BasedOn="{StaticResource ModuleCardBorderStyle}"
        TargetType="Border">
        <Setter Property="Margin" Value="{StaticResource CommonThickness}" />
    </Style>

    <Style
        x:Key="SectionCardStyleForColorView"
        BasedOn="{StaticResource SectionCardStyle}"
        TargetType="Border">
        <Setter Property="Width" Value="260" />
    </Style>

    <Style
        x:Key="SectionCardStyleWithMarginStyle"
        BasedOn="{StaticResource SectionCardStyle}"
        TargetType="Border">
        <Setter Property="Margin">
            <Setter.Value>
                <Thickness
                    Bottom="{StaticResource SmallThicknessValue}"
                    Left="{StaticResource LargeThicknessValue}"
                    Right="{StaticResource LargeThicknessValue}"
                    Top="{StaticResource CommonThicknessValue}" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="ShortcutDisplayBorderStyle"
        BasedOn="{StaticResource ModuleCardBorderWithMarginStyle}"
        TargetType="{x:Type Border}">
        <Setter Property="IsHitTestVisible" Value="True" />
        <Setter Property="CornerRadius" Value="{StaticResource CommonCornerRadius}" />
        <Setter Property="BorderThickness" Value="{StaticResource ExtraSmallBorderThickness}" />
        <Setter Property="Padding" Value="{StaticResource LargeThickness}" />
        <Setter Property="Background" Value="Transparent" />

        <Setter Property="BorderBrush">
            <Setter.Value>
                <DrawingBrush>
                    <DrawingBrush.Drawing>
                        <DrawingGroup>
                            <GeometryDrawing Geometry="M0,0 H1 V1 H0 Z">
                                <GeometryDrawing.Brush>
                                    <LinearGradientBrush Opacity="0.60" StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="{DynamicResource CommonDarkGrayColor}" />
                                        <GradientStop Offset="1" Color="{DynamicResource CommonDarkGrayColor}" />
                                    </LinearGradientBrush>
                                </GeometryDrawing.Brush>
                            </GeometryDrawing>
                            <GeometryDrawing Geometry="M0,0 H1 V1 H0 Z">
                                <GeometryDrawing.Brush>
                                    <LinearGradientBrush Opacity="0.25" StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="{DynamicResource CommonColor}" />
                                        <GradientStop Offset="1" Color="{DynamicResource CommonColor}" />
                                    </LinearGradientBrush>
                                </GeometryDrawing.Brush>
                            </GeometryDrawing>
                        </DrawingGroup>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="{StaticResource CommonDisableOpacity}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="OverallContainerBorderStyle" TargetType="Border">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="CornerRadius" Value="{StaticResource LargeCornerRadius}" />
        <Setter Property="Padding" Value="{StaticResource LargeThickness}" />
        <Setter Property="Margin" Value="{StaticResource CommonTopBottomThickness}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="24"
                    Direction="315"
                    Opacity="0.10"
                    ShadowDepth="6"
                    Color="{DynamicResource CommonBlackColor}" />
            </Setter.Value>
        </Setter>
        <Setter Property="Background">
            <Setter.Value>
                <DrawingBrush Opacity="0.08">
                    <DrawingBrush.Drawing>
                        <DrawingGroup>
                            <GeometryDrawing>
                                <GeometryDrawing.Geometry>
                                    <RectangleGeometry Rect="0,0,1,1" />
                                </GeometryDrawing.Geometry>
                                <GeometryDrawing.Brush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Offset="0" Color="{DynamicResource CommonDarkerGrayColor}" />
                                        <GradientStop Offset="1" Color="{DynamicResource CommonDarkerGrayColor}" />
                                    </LinearGradientBrush>
                                </GeometryDrawing.Brush>
                            </GeometryDrawing>
                            <GeometryDrawing>
                                <GeometryDrawing.Geometry>
                                    <RectangleGeometry Rect="0,0,1,1" />
                                </GeometryDrawing.Geometry>
                                <GeometryDrawing.Brush>
                                    <LinearGradientBrush Opacity="0.03" StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Offset="0" Color="{DynamicResource CommonWhiteColor}" />
                                        <GradientStop Offset="1" Color="{DynamicResource CommonBlackColor}" />
                                    </LinearGradientBrush>
                                </GeometryDrawing.Brush>
                            </GeometryDrawing>
                        </DrawingGroup>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="{StaticResource CommonDisableOpacity}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="CommandItemBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource CommonCornerRadius}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Opacity="0.05" Color="{DynamicResource CommonWhiteColor}" />
                    </Setter.Value>
                </Setter>
                <Setter Property="BorderBrush" Value="{DynamicResource OnSurfaceCardStrokeOnDarkBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="{x:Type TextBlock}" TargetType="{x:Type TextBlock}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{DynamicResource CommonWhiteColor}" />
                    <GradientStop Offset="1" Color="{DynamicResource CommonWhiteColor}" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="{StaticResource CommonThickness}" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="FontFamily" Value="{StaticResource CommonFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource CommonFontSize}" />

        <Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType" />
        <Setter Property="TextOptions.TextHintingMode" Value="Fixed" />
        <Setter Property="UseLayoutRounding" Value="True" />
    </Style>

    <Style
        x:Key="SmallTextBlock"
        BasedOn="{StaticResource {x:Type TextBlock}}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
    </Style>

    <Style
        x:Key="HeaderTextBlock"
        BasedOn="{StaticResource {x:Type TextBlock}}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="{StaticResource LargeFontSize}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="{StaticResource LargeThickness}" />
    </Style>

    <Style TargetType="ProgressBar">
        <Setter Property="MinWidth" Value="{StaticResource CommonWidth}" />
        <Setter Property="Height" Value="{StaticResource CommonHeight}" />
        <Setter Property="Margin" Value="{StaticResource LargeThickness}" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Padding" Value="0,0,0,2" />
        <Setter Property="BorderBrush" Value="{DynamicResource OnSurfaceCardStrokeOnDarkBrush}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="Tag" Value="{StaticResource CommonCornerRadius}" />
        <Setter Property="Foreground">
            <Setter.Value>
                <DrawingBrush>
                    <DrawingBrush.Drawing>
                        <DrawingGroup>
                            <GeometryDrawing>
                                <GeometryDrawing.Geometry>
                                    <RectangleGeometry Rect="0,0,1,1" />
                                </GeometryDrawing.Geometry>
                                <GeometryDrawing.Brush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Offset="0.48" Color="{DynamicResource CommonGreenColor}" />
                                        <GradientStop Offset="0.52" Color="{DynamicResource CommonGreenColor}" />
                                    </LinearGradientBrush>
                                </GeometryDrawing.Brush>
                            </GeometryDrawing>
                            <DrawingGroup>
                                <GeometryDrawing>
                                    <GeometryDrawing.Geometry>
                                        <RectangleGeometry Rect="0,0,1,1" />
                                    </GeometryDrawing.Geometry>
                                    <GeometryDrawing.Brush>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Offset="0.48" Color="{DynamicResource CommonGreenColor}" />
                                            <GradientStop Offset="0.52" Color="{DynamicResource CommonGreenColor}" />
                                        </LinearGradientBrush>
                                    </GeometryDrawing.Brush>
                                </GeometryDrawing>
                                <DrawingGroup.OpacityMask>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Offset="0" Color="#FF000000" />
                                        <GradientStop Offset="1" Color="#00000000" />
                                    </LinearGradientBrush>
                                </DrawingGroup.OpacityMask>
                            </DrawingGroup>
                        </DrawingGroup>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="{StaticResource CommonBorderThickness}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid SnapsToDevicePixels="True" UseLayoutRounding="True">
                        <Grid x:Name="PART_Track">
                            <Grid>
                                <Border
                                    x:Name="TrackBorder"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{StaticResource ExtraSmallBorderThickness}"
                                    CornerRadius="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag, Converter={StaticResource TagToCornerRadiusConverter}}">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="15"
                                            Direction="315"
                                            Opacity="0.12"
                                            ShadowDepth="5"
                                            Color="{DynamicResource CommonBlackColor}" />
                                    </Border.Effect>
                                    <Border.Background>
                                        <DrawingBrush Opacity="{StaticResource CommonOpacity}">
                                            <DrawingBrush.Drawing>
                                                <DrawingGroup>
                                                    <GeometryDrawing>
                                                        <GeometryDrawing.Geometry>
                                                            <RectangleGeometry Rect="0,0,1,1" />
                                                        </GeometryDrawing.Geometry>
                                                        <GeometryDrawing.Brush>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                <GradientStop Offset="0" Color="{DynamicResource CommonDarkGrayColor}" />
                                                                <GradientStop Offset="1" Color="{DynamicResource CommonDarkGrayColor}" />
                                                            </LinearGradientBrush>
                                                        </GeometryDrawing.Brush>
                                                    </GeometryDrawing>
                                                    <DrawingGroup>
                                                        <GeometryDrawing>
                                                            <GeometryDrawing.Geometry>
                                                                <RectangleGeometry Rect="0,0,1,1" />
                                                            </GeometryDrawing.Geometry>
                                                            <GeometryDrawing.Brush>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                    <GradientStop Offset="0" Color="{DynamicResource CommonDarkGrayColor}" />
                                                                    <GradientStop Offset="1" Color="{DynamicResource CommonDarkGrayColor}" />
                                                                </LinearGradientBrush>
                                                            </GeometryDrawing.Brush>
                                                        </GeometryDrawing>
                                                        <DrawingGroup.OpacityMask>
                                                            <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                                                                <GradientStop Offset="0" Color="#FF000000" />
                                                                <GradientStop Offset="1" Color="#00000000" />
                                                            </LinearGradientBrush>
                                                        </DrawingGroup.OpacityMask>
                                                    </DrawingGroup>
                                                </DrawingGroup>
                                            </DrawingBrush.Drawing>
                                        </DrawingBrush>
                                    </Border.Background>
                                </Border>

                                <Border HorizontalAlignment="Left" Background="{TemplateBinding Foreground}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="{StaticResource CommonCornerRadius}" />
                                            <Style.Triggers>
                                                <DataTrigger Value="{x:Static system:Boolean.TrueString}">
                                                    <DataTrigger.Binding>
                                                        <MultiBinding Converter="{StaticResource ValuesEqualConverter}">
                                                            <Binding Path="Value" RelativeSource="{RelativeSource TemplatedParent}" />
                                                            <Binding Path="Maximum" RelativeSource="{RelativeSource TemplatedParent}" />
                                                        </MultiBinding>
                                                    </DataTrigger.Binding>
                                                    <Setter Property="CornerRadius" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag, Converter={StaticResource TagToCornerRadiusConverter}}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Border.Width>
                                        <MultiBinding Converter="{StaticResource ProgressToWidthConverter}">
                                            <Binding Path="Value" RelativeSource="{RelativeSource TemplatedParent}" />
                                            <Binding Path="Maximum" RelativeSource="{RelativeSource TemplatedParent}" />
                                            <Binding ElementName="PART_Track" Path="ActualWidth" />
                                        </MultiBinding>
                                    </Border.Width>
                                    <Border.Clip>
                                        <RectangleGeometry
                                            RadiusX="{StaticResource CommonCornerRadiusValue}"
                                            RadiusY="{StaticResource CommonCornerRadiusValue}"
                                            Rect="0,0,10000,40" />
                                    </Border.Clip>
                                </Border>
                            </Grid>
                        </Grid>

                        <Grid x:Name="PART_Indicator" Background="Transparent" />

                        <TextBlock
                            x:Name="ValueTextBlock"
                            Margin="{TemplateBinding Padding}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource CommonFontFamily}"
                            FontSize="{StaticResource CommonFontSize}"
                            FontWeight="SemiBold"
                            TextOptions.TextFormattingMode="Ideal"
                            TextOptions.TextHintingMode="Fixed"
                            TextOptions.TextRenderingMode="ClearType">
                            <TextBlock.Effect>
                                <DropShadowEffect
                                    BlurRadius="5"
                                    Direction="315"
                                    Opacity="0.5"
                                    ShadowDepth="2"
                                    Color="{DynamicResource CommonDarkerGrayColor}" />
                            </TextBlock.Effect>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{Binding Path=Background, ElementName=TrackBorder, Converter={StaticResource BackgroundToForegroundConverter}}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=Value, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource GreaterThanConverter}, ConverterParameter=55}" Value="True">
                                            <Setter Property="Foreground" Value="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type ProgressBar}}, Converter={StaticResource BackgroundToForegroundConverter}}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                            <Run>
                                <Run.Text>
                                    <MultiBinding Converter="{StaticResource ProgressToPercentConverter}">
                                        <Binding Path="Value" RelativeSource="{RelativeSource TemplatedParent}" />
                                        <Binding Path="Maximum" RelativeSource="{RelativeSource TemplatedParent}" />
                                    </MultiBinding>
                                </Run.Text>
                            </Run>
                            <Run Text="%" />
                        </TextBlock>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsIndeterminate" Value="True">
                            <Setter TargetName="ValueTextBlock" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="{StaticResource CommonDisableOpacity}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=Value, RelativeSource={RelativeSource Self}, Converter={StaticResource GreaterThanConverter}, ConverterParameter=90}" Value="True">
                <Setter Property="Foreground">
                    <Setter.Value>
                        <DrawingBrush>
                            <DrawingBrush.Drawing>
                                <DrawingGroup>
                                    <GeometryDrawing>
                                        <GeometryDrawing.Geometry>
                                            <RectangleGeometry Rect="0,0,1,1" />
                                        </GeometryDrawing.Geometry>
                                        <GeometryDrawing.Brush>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Offset="0.48" Color="{DynamicResource CommonBlueColor}" />
                                                <GradientStop Offset="0.52" Color="{DynamicResource CommonBlueColor}" />
                                            </LinearGradientBrush>
                                        </GeometryDrawing.Brush>
                                    </GeometryDrawing>
                                    <DrawingGroup>
                                        <GeometryDrawing>
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0,0,1,1" />
                                            </GeometryDrawing.Geometry>
                                            <GeometryDrawing.Brush>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Offset="0.48" Color="{DynamicResource CommonBlueColor}" />
                                                    <GradientStop Offset="0.52" Color="{DynamicResource CommonBlueColor}" />
                                                </LinearGradientBrush>
                                            </GeometryDrawing.Brush>
                                        </GeometryDrawing>
                                        <DrawingGroup.OpacityMask>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Offset="0" Color="#FF000000" />
                                                <GradientStop Offset="1" Color="#00000000" />
                                            </LinearGradientBrush>
                                        </DrawingGroup.OpacityMask>
                                    </DrawingGroup>
                                </DrawingGroup>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Setter.Value>
                </Setter>
            </DataTrigger>

            <DataTrigger Binding="{Binding Path=Value, RelativeSource={RelativeSource Self}, Converter={StaticResource GreaterThanConverter}, ConverterParameter=99}" Value="True">
                <Setter Property="Foreground">
                    <Setter.Value>
                        <DrawingBrush>
                            <DrawingBrush.Drawing>
                                <DrawingGroup>
                                    <GeometryDrawing>
                                        <GeometryDrawing.Geometry>
                                            <RectangleGeometry Rect="0,0,1,1" />
                                        </GeometryDrawing.Geometry>
                                        <GeometryDrawing.Brush>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Offset="0.48" Color="{DynamicResource CommonColor}" />
                                                <GradientStop Offset="0.52" Color="{DynamicResource CommonColor}" />
                                            </LinearGradientBrush>
                                        </GeometryDrawing.Brush>
                                    </GeometryDrawing>
                                    <DrawingGroup>
                                        <GeometryDrawing>
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0,0,1,1" />
                                            </GeometryDrawing.Geometry>
                                            <GeometryDrawing.Brush>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Offset="0.48" Color="{DynamicResource CommonColor}" />
                                                    <GradientStop Offset="0.52" Color="{DynamicResource CommonColor}" />
                                                </LinearGradientBrush>
                                            </GeometryDrawing.Brush>
                                        </GeometryDrawing>
                                        <DrawingGroup.OpacityMask>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Offset="0" Color="#FF000000" />
                                                <GradientStop Offset="1" Color="#00000000" />
                                            </LinearGradientBrush>
                                        </DrawingGroup.OpacityMask>
                                    </DrawingGroup>
                                </DrawingGroup>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Setter.Value>
                </Setter>
            </DataTrigger>

            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="{StaticResource CommonDisableOpacity}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type ToolTip}">
        <Setter Property="Margin" Value="{StaticResource LargeThickness}" />
        <Setter Property="MaxWidth" Value="560" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{DynamicResource CommonWhiteColor}" />
                    <GradientStop Offset="1" Color="{DynamicResource CommonWhiteColor}" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush Opacity="{StaticResource CommonOpacity}" StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{DynamicResource CommonDarkGrayColor}" />
                    <GradientStop Offset="1" Color="{DynamicResource CommonDarkGrayColor}" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush Opacity="0.2" StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{DynamicResource CommonColor}" />
                    <GradientStop Offset="1" Color="{DynamicResource CommonColor}" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="{StaticResource ExtraSmallBorderThickness}" />
        <Setter Property="Padding" Value="{StaticResource CommonThickness}" />
        <Setter Property="Opacity" Value="0" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="0.98" ScaleY="0.98" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToolTip}">
                    <ControlTemplate.Resources>
                        <DataTemplate xmlns:sys="clr-namespace:System;assembly=mscorlib" DataType="{x:Type sys:String}">
                            <TextBlock
                                Text="{Binding}"
                                TextAlignment="Left"
                                TextWrapping="WrapWithOverflow" />
                        </DataTemplate>
                        <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="{x:Type TextBlock}">
                            <Setter Property="TextWrapping" Value="WrapWithOverflow" />
                            <Setter Property="TextAlignment" Value="Left" />
                        </Style>
                    </ControlTemplate.Resources>
                    <Border

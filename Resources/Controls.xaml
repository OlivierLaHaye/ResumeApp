    <Style x:Key="MessageBoxActionButtonBase" TargetType="{x:Type Button}">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="BorderThickness" Value="{StaticResource ExtraSmallBorderThickness}" />
        <Setter Property="Padding" Value="{StaticResource CommonTopBottomThickness}" />
        <Setter Property="Margin">
            <Setter.Value>
                <Thickness
                    Bottom="{StaticResource CommonThicknessValue}"
                    Left="{StaticResource ExtraLargeThicknessValue}"
                    Right="{StaticResource ExtraLargeThicknessValue}"
                    Top="{StaticResource CommonThicknessValue}" />
            </Setter.Value>
        </Setter>
        <Setter Property="Cursor" Value="{StaticResource HandCursor}" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush Opacity="0.04" StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{DynamicResource CommonDarkGrayColor}" />
                    <GradientStop Offset="1" Color="{DynamicResource CommonDarkGrayColor}" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush Opacity="0.65" StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{DynamicResource CommonDarkGrayColor}" />
                    <GradientStop Offset="1" Color="{DynamicResource CommonDarkGrayColor}" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid
                        RenderTransformOrigin="0.5,0.5"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="choiceScale" ScaleX="1" ScaleY="1" />
                        </Grid.RenderTransform>
                        <Border
                            x:Name="choiceBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource CommonCornerRadius}"
                            SnapsToDevicePixels="True"
                            UseLayoutRounding="True">
                            <ContentPresenter
                                x:Name="choiceContent"
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True"
                                TextElement.FontWeight="SemiBold"
                                TextElement.Foreground="{Binding ElementName=choiceBorder, Path=Background, Converter={StaticResource BackgroundToForegroundConverter}}" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            EasingFunction="{StaticResource EaseOut}"
                                            Storyboard.TargetName="choiceScale"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="{StaticResource UniformScaleHover}"
                                            Duration="{StaticResource FastDuration}" />
                                        <DoubleAnimation
                                            EasingFunction="{StaticResource EaseOut}"
                                            Storyboard.TargetName="choiceScale"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="{StaticResource UniformScaleHover}"
                                            Duration="{StaticResource FastDuration}" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            EasingFunction="{StaticResource EaseOut}"
                                            Storyboard.TargetName="choiceScale"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="1"
                                            Duration="{StaticResource NormalDuration}" />
                                        <DoubleAnimation
                                            EasingFunction="{StaticResource EaseOut}"
                                            Storyboard.TargetName="choiceScale"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="1"
                                            Duration="{StaticResource NormalDuration}" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="choiceScale"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="{StaticResource UniformScalePressed}"
                                            Duration="{StaticResource FastDuration}" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="choiceScale"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="{StaticResource UniformScalePressed}"
                                            Duration="{StaticResource FastDuration}" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="choiceBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect
                                        BlurRadius="20"
                                        Opacity="0.25"
                                        ShadowDepth="0"
                                        Color="{DynamicResource CommonColor}" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="{StaticResource CommonDisableOpacity}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


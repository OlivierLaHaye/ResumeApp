<!--  Pages/OverviewPage.xaml  -->

<UserControl
    x:Class="ResumeApp.Pages.OverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="mOverviewPageRoot"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True">

    <UserControl.Resources>
        <Style
            x:Key="BaseTextBlockStyle"
            BasedOn="{StaticResource {x:Type TextBlock}}"
            TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="{DynamicResource CommonFontFamily}" />
        </Style>

        <Style BasedOn="{StaticResource BaseTextBlockStyle}" TargetType="{x:Type TextBlock}" />

        <Style
            x:Key="SectionTitleTextBlockStyle"
            BasedOn="{StaticResource BaseTextBlockStyle}"
            TargetType="{x:Type TextBlock}" />

        <Style
            x:Key="SectionBodyTextBlockStyle"
            BasedOn="{StaticResource BaseTextBlockStyle}"
            TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
            <Setter Property="Opacity" Value="{StaticResource CommonOpacity}" />
        </Style>

        <Style
            x:Key="LabelTextBlockStyle"
            BasedOn="{StaticResource BaseTextBlockStyle}"
            TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
            <Setter Property="Opacity" Value="{StaticResource LowOpacity}" />
        </Style>

        <Style
            x:Key="ValueTextBlockStyle"
            BasedOn="{StaticResource BaseTextBlockStyle}"
            TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
        </Style>

        <Style x:Key="ContactActionPillButtonStyle" TargetType="{x:Type Button}">
            <Style.Resources>
                <SolidColorBrush
                    x:Key="mContactActionNormalBackgroundBrush"
                    Opacity="0.08"
                    Color="{DynamicResource CommonWhiteColor}" />
                <SolidColorBrush
                    x:Key="mContactActionNormalBorderBrush"
                    Opacity="0.16"
                    Color="{DynamicResource CommonWhiteColor}" />

                <SolidColorBrush
                    x:Key="mContactActionHoverBackgroundBrush"
                    Opacity="0.16"
                    Color="{DynamicResource CommonBlueColor}" />
                <SolidColorBrush
                    x:Key="mContactActionHoverBorderBrush"
                    Opacity="0.55"
                    Color="{DynamicResource CommonBlueColor}" />

                <SolidColorBrush
                    x:Key="mContactActionPressedBackgroundBrush"
                    Opacity="0.22"
                    Color="{DynamicResource CommonBlueStrongColor}" />
                <SolidColorBrush
                    x:Key="mContactActionPressedBorderBrush"
                    Opacity="0.75"
                    Color="{DynamicResource CommonBlueStrongColor}" />
            </Style.Resources>

            <Setter Property="Background" Value="{StaticResource mContactActionNormalBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource mContactActionNormalBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Height" Value="40" />
            <Setter Property="FontFamily" Value="{DynamicResource CommonFontFamily}" />
            <Setter Property="Foreground" Value="{DynamicResource CommonWhiteBrush}" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="mContactActionTemplateRoot" SnapsToDevicePixels="True">
                            <Border
                                x:Name="mContactActionBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource CommonCornerRadius}"
                                RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform x:Name="mContactActionScaleTransform" ScaleX="1" ScaleY="1" />
                                </Border.RenderTransform>

                                <ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    RecognizesAccessKey="True" />
                            </Border>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="mContactActionScaleTransform"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1"
                                                Duration="0:0:0.10">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation
                                                Storyboard.TargetName="mContactActionScaleTransform"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1"
                                                Duration="0:0:0.10">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>

                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="mContactActionBorder" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource mContactActionNormalBackgroundBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="mContactActionBorder" Storyboard.TargetProperty="BorderBrush">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource mContactActionNormalBorderBrush}" />
                                            </ObjectAnimationUsingKeyFrames>

                                            <DoubleAnimation
                                                Storyboard.TargetName="mContactActionBorder"
                                                Storyboard.TargetProperty="Opacity"
                                                To="1"
                                                Duration="0:0:0" />
                                        </Storyboard>
                                    </VisualState>

                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="mContactActionScaleTransform"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1.05"
                                                Duration="0:0:0.10">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation
                                                Storyboard.TargetName="mContactActionScaleTransform"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1.05"
                                                Duration="0:0:0.10">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>

                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="mContactActionBorder" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource mContactActionHoverBackgroundBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="mContactActionBorder" Storyboard.TargetProperty="BorderBrush">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource mContactActionHoverBorderBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>

                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="mContactActionScaleTransform"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="0.98"
                                                Duration="0:0:0.05">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation
                                                Storyboard.TargetName="mContactActionScaleTransform"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="0.98"
                                                Duration="0:0:0.05">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>

                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="mContactActionBorder" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource mContactActionPressedBackgroundBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="mContactActionBorder" Storyboard.TargetProperty="BorderBrush">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource mContactActionPressedBorderBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>

                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="mContactActionBorder"
                                                Storyboard.TargetProperty="Opacity"
                                                To="0.45"
                                                Duration="0:0:0" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer
        x:Name="mOverviewScrollViewer"
        HorizontalScrollBarVisibility="Disabled"
        VerticalScrollBarVisibility="Auto">
        <Grid x:Name="mOverviewLayoutRoot" Margin="{StaticResource LargeThickness}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border
                x:Name="mHeaderSectionBorder"
                Grid.Row="0"
                Style="{StaticResource SubSectionCardBorderStyle}">
                <Grid x:Name="mHeaderSectionGrid" Margin="{StaticResource CommonThickness}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel x:Name="mHeaderTitleStackPanel" Orientation="Vertical">
                        <TextBlock
                            x:Name="mFullNameTextBlock"
                            FontSize="{StaticResource ExtraLargeFontSize}"
                            Text="{Binding FullNameText}" />
                        <TextBlock
                            x:Name="mTargetTitlesTextBlock"
                            Margin="{StaticResource SmallThickness}"
                            FontFamily="{StaticResource MonoFontFamily}"
                            FontSize="{StaticResource SmallFontSize}"
                            Opacity="{StaticResource CommonOpacity}"
                            Text="{Binding TargetTitlesText}" />
                    </StackPanel>

                    <Grid
                        x:Name="mHeaderMetaGrid"
                        Grid.Row="1"
                        Margin="{StaticResource CommonTopBottomThickness}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            x:Name="mHeaderLeftMetaStackPanel"
                            Grid.Column="0"
                            Orientation="Vertical">
                            <TextBlock
                                x:Name="mLocationLabelTextBlock"
                                Margin="{StaticResource SmallThickness}"
                                Style="{StaticResource LabelTextBlockStyle}"
                                Text="{Binding ResourcesService[LabelLocation]}" />
                            <TextBlock
                                x:Name="mLocationValueTextBlock"
                                Margin="{StaticResource ExtraSmallThickness}"
                                Style="{StaticResource ValueTextBlockStyle}"
                                Text="{Binding LocationText}" />

                            <TextBlock
                                x:Name="mWorkPreferenceLabelTextBlock"
                                Margin="{StaticResource SmallThickness}"
                                Style="{StaticResource LabelTextBlockStyle}"
                                Text="{Binding ResourcesService[LabelWorkPreference]}" />
                            <TextBlock
                                x:Name="mWorkPreferenceValueTextBlock"
                                Margin="{StaticResource ExtraSmallThickness}"
                                Style="{StaticResource ValueTextBlockStyle}"
                                Text="{Binding WorkPreferenceText}" />
                        </StackPanel>

                        <StackPanel
                            x:Name="mHeaderRightMetaStackPanel"
                            Grid.Column="1"
                            Orientation="Vertical">
                            <TextBlock
                                x:Name="mEmailLabelTextBlock"
                                Margin="{StaticResource SmallThickness}"
                                Style="{StaticResource LabelTextBlockStyle}"
                                Text="{Binding ResourcesService[LabelEmail]}" />
                            <Grid x:Name="mEmailValueWithActionGrid" Margin="{StaticResource ExtraSmallThickness}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    x:Name="mEmailValueTextBlock"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource ValueTextBlockStyle}"
                                    Text="{Binding EmailText}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap" />
                                <Button
                                    x:Name="mEmailActionButton"
                                    Grid.Column="1"
                                    Command="{Binding ComposeEmailCommand}"
                                    CommandParameter="{Binding EmailText}"
                                    Style="{StaticResource ContactActionPillButtonStyle}">
                                    <TextBlock
                                        x:Name="mEmailActionButtonTextBlock"
                                        FontSize="{StaticResource SmallFontSize}"
                                        Text="{Binding ComposeEmailButtonText}" />
                                </Button>
                            </Grid>

                            <TextBlock
                                x:Name="mLinkedInLabelTextBlock"
                                Margin="{StaticResource SmallThickness}"
                                Style="{StaticResource LabelTextBlockStyle}"
                                Text="{Binding ResourcesService[LabelLinkedIn]}" />
                            <Grid x:Name="mLinkedInValueWithActionGrid" Margin="{StaticResource ExtraSmallThickness}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    x:Name="mLinkedInValueTextBlock"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource ValueTextBlockStyle}"
                                    Text="{Binding LinkedInText}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap" />
                                <Button
                                    x:Name="mLinkedInActionButton"
                                    Grid.Column="1"
                                    Command="{Binding OpenUrlCommand}"
                                    CommandParameter="{Binding LinkedInText}"
                                    Style="{StaticResource ContactActionPillButtonStyle}">
                                    <TextBlock
                                        x:Name="mLinkedInActionButtonTextBlock"
                                        FontSize="{StaticResource SmallFontSize}"
                                        Text="{Binding OpenUrlButtonText}" />
                                </Button>
                            </Grid>

                            <TextBlock
                                x:Name="mGitHubLabelTextBlock"
                                Margin="{StaticResource SmallThickness}"
                                Style="{StaticResource LabelTextBlockStyle}"
                                Text="{Binding ResourcesService[LabelGitHub]}" />
                            <Grid x:Name="mGitHubValueWithActionGrid" Margin="{StaticResource ExtraSmallThickness}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    x:Name="mGitHubValueTextBlock"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource ValueTextBlockStyle}"
                                    Text="{Binding GitHubText}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap" />
                                <Button
                                    x:Name="mGitHubActionButton"
                                    Grid.Column="1"
                                    Command="{Binding OpenUrlCommand}"
                                    CommandParameter="{Binding GitHubText}"
                                    Style="{StaticResource ContactActionPillButtonStyle}">
                                    <TextBlock
                                        x:Name="mGitHubActionButtonTextBlock"
                                        FontSize="{StaticResource SmallFontSize}"
                                        Text="{Binding OpenUrlButtonText}" />
                                </Button>
                            </Grid>

                            <TextBlock
                                x:Name="mPortfolioLabelTextBlock"
                                Margin="{StaticResource SmallThickness}"
                                Style="{StaticResource LabelTextBlockStyle}"
                                Text="{Binding ResourcesService[LabelPortfolio]}" />
                            <Grid x:Name="mPortfolioValueWithActionGrid" Margin="{StaticResource ExtraSmallThickness}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    x:Name="mPortfolioValueTextBlock"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource ValueTextBlockStyle}"
                                    Text="{Binding PortfolioText}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap" />
                                <Button
                                    x:Name="mPortfolioActionButton"
                                    Grid.Column="1"
                                    Command="{Binding OpenUrlCommand}"
                                    CommandParameter="{Binding PortfolioText}"
                                    Style="{StaticResource ContactActionPillButtonStyle}">
                                    <TextBlock
                                        x:Name="mPortfolioActionButtonTextBlock"
                                        FontSize="{StaticResource SmallFontSize}"
                                        Text="{Binding OpenUrlButtonText}" />
                                </Button>
                            </Grid>
                        </StackPanel>

                    </Grid>
                </Grid>
            </Border>

            <Border
                x:Name="mSummarySectionBorder"
                Grid.Row="1"
                Style="{StaticResource SubSectionCardBorderStyle}">
                <StackPanel
                    x:Name="mSummaryStackPanel"
                    Margin="{StaticResource CommonThickness}"
                    Orientation="Vertical">
                    <TextBlock
                        x:Name="mSummaryTitleTextBlock"
                        Style="{StaticResource SectionTitleTextBlockStyle}"
                        Text="{Binding ResourcesService[SectionHeaderSummary]}" />
                    <TextBlock
                        x:Name="mSummaryBodyTextBlock"
                        Margin="{StaticResource SmallThickness}"
                        Style="{StaticResource SectionBodyTextBlockStyle}"
                        Text="{Binding SummaryText}" />
                </StackPanel>
            </Border>

            <Border
                x:Name="mHighlightsSectionBorder"
                Grid.Row="2"
                Style="{StaticResource SubSectionCardBorderStyle}">
                <StackPanel
                    x:Name="mHighlightsStackPanel"
                    Margin="{StaticResource CommonThickness}"
                    Orientation="Vertical">
                    <TextBlock
                        x:Name="mHighlightsTitleTextBlock"
                        Style="{StaticResource SectionTitleTextBlockStyle}"
                        Text="{Binding ResourcesService[SectionHeaderHighlights]}" />

                    <ItemsControl
                        x:Name="mHighlightsItemsControl"
                        Margin="{StaticResource SmallThickness}"
                        ItemsSource="{Binding Highlights}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <DockPanel x:Name="mHighlightDockPanel" LastChildFill="True">
                                    <TextBlock
                                        x:Name="mHighlightBulletTextBlock"
                                        Margin="{StaticResource SmallLeftRightThickness}"
                                        DockPanel.Dock="Left"
                                        Opacity="{StaticResource CommonOpacity}"
                                        Text="{Binding DataContext.ResourcesService[GlyphBullet], RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" />
                                    <TextBlock
                                        x:Name="mHighlightTextBlock"
                                        Style="{StaticResource SectionBodyTextBlockStyle}"
                                        Text="{Binding DisplayText}" />
                                </DockPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <Border
                x:Name="mDesignSystemSectionBorder"
                Grid.Row="3"
                Style="{StaticResource SubSectionCardBorderStyle}">
                <StackPanel
                    x:Name="mDesignSystemStackPanel"
                    Margin="{StaticResource CommonThickness}"
                    Orientation="Vertical">
                    <TextBlock
                        x:Name="mDesignSystemTitleTextBlock"
                        Style="{StaticResource SectionTitleTextBlockStyle}"
                        Text="{Binding ResourcesService[SectionHeaderDesignSystem]}" />

                    <ItemsControl
                        x:Name="mDesignSystemItemsControl"
                        Margin="{StaticResource SmallThickness}"
                        ItemsSource="{Binding DesignSystemPoints}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <DockPanel x:Name="mDesignSystemDockPanel" LastChildFill="True">
                                    <TextBlock
                                        x:Name="mDesignSystemBulletTextBlock"
                                        Margin="{StaticResource SmallLeftRightThickness}"
                                        DockPanel.Dock="Left"
                                        Opacity="{StaticResource CommonOpacity}"
                                        Text="{Binding DataContext.ResourcesService[GlyphBullet], RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" />
                                    <TextBlock
                                        x:Name="mDesignSystemTextBlock"
                                        Style="{StaticResource SectionBodyTextBlockStyle}"
                                        Text="{Binding DisplayText}" />
                                </DockPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <Border
                x:Name="mCoreSkillsSectionBorder"
                Grid.Row="4"
                Style="{StaticResource SubSectionCardBorderStyle}">
                <StackPanel
                    x:Name="mCoreSkillsStackPanel"
                    Margin="{StaticResource CommonThickness}"
                    Orientation="Vertical">
                    <TextBlock
                        x:Name="mCoreSkillsTitleTextBlock"
                        Style="{StaticResource SectionTitleTextBlockStyle}"
                        Text="{Binding ResourcesService[SectionHeaderCoreSkills]}" />

                    <ItemsControl
                        x:Name="mCoreSkillsItemsControl"
                        Margin="{StaticResource SmallThickness}"
                        ItemsSource="{Binding CoreSkillsLines}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <DockPanel x:Name="mCoreSkillsDockPanel" LastChildFill="True">
                                    <TextBlock
                                        x:Name="mCoreSkillsBulletTextBlock"
                                        Margin="{StaticResource SmallLeftRightThickness}"
                                        DockPanel.Dock="Left"
                                        Opacity="{StaticResource CommonOpacity}"
                                        Text="{Binding DataContext.ResourcesService[GlyphBullet], RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" />
                                    <TextBlock
                                        x:Name="mCoreSkillsTextBlock"
                                        Style="{StaticResource SectionBodyTextBlockStyle}"
                                        Text="{Binding DisplayText}" />
                                </DockPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
